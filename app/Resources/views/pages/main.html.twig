{% extends 'default/index.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col s10 offset-s1 m6 offset-m3 l6 offset-l3 m30">
            <div>
                {{ parent() }}
            </div>
            <form method="POST" class="only-one">
                <div class="input-field col s12">
                    <label for="phone">Введите номер абонента</label>
                    <input type="number" class="validate" name="phone" id="phone" />
                </div>
                <div class="input-field col s12">
                    <label for="sim">Введите номер сим</label>
                    <input type="number" class="validate" name="sim" id="sim" />
                </div>
                <div class="card-action right-align">
                    <input type="reset" id="reset" class="btn-flat grey-text waves-effect" value="Сбросить">
                    <input type="submit" name="submit" class="btn indigo accent-3 waves-effect waves-light" value="Подтвердить">
                </div>
            </form>
        </div>

        {% if userdata is defined and userdata is not empty %}
            <table class="bordered highlight centered ">
                <thead>
                    <tr>
                        <th>ID абонента</th>
                        <th>Имя</th>
                        <th>Фамилия</th>
                        <th>Мобильный номер</th>
                        <th>IMSI сим</th>
                        <th>Адресс</th>
                        <th>Статус</th>
                        <th>Действия</th>
                    </tr>
                </thead>

                <tbody>
                    <tr>
                        <td>{{ userdata.subs_id }}</td>
                        <td>{{ userdata.name }}</td>
                        <td>{{ userdata.surname }}</td>
                        <td>{{ userdata.msisdn }}</td>
                        <td>{{ userdata.imsi }}</td>
                        <td>{{ userdata.adress }}</td>
                        <td>{{ userdata.State }}</td>

                        <td class="action-table-row">
                            <a href="{{ path('user_edit', {'userID': userdata.subs_id}) }}">Изменить</a>
                            <a href="{{ path('user_show', {'userID': userdata.subs_id}) }}">Просмотр</a>
                            <a href="#">Перейти к аккаунту</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}